extends ../../layouts/default.pug
include ../../mixins/table-tree.pug
include ../../mixins/alert.pug

block main
  +alert-success(3000)
  +alert-error(3000)
  
  if (role.permissions.includes("posts-category_view"))
    h1(class="mb-4") Danh mục bài viết
    
    .card.mb-3
      .card-header Danh sách
      .card-body
        .row
          .col-8
          .col-4.text-right
            if (role.permissions.includes("posts-category_create"))
              a(
                href=`/${prefixAdmin}/posts-category/create`
                class="btn btn-outline-success"
              ) + Thêm mới
          table(
              class="table table-hover table-sm"
          )
              thead
                tr
                  th STT
                  th Hình ảnh
                  th Tiêu đề
                  th Vị trí
                  th Trạng thái
                  th Người tạo
                  th Người cập nhật
                  th Hành động
              tbody
                +table-tree({items: records, path: 'posts-category'})