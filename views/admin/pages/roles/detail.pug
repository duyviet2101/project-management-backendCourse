extends ../../layouts/default.pug
include ../../mixins/moment.pug


block main
  if (role.permissions.includes("roles_view"))
    if (roleData.title)
      h1(class="mb-4") #{roleData.title}

    if (roleData.description)
      div(class="mb-4") Mô tả: !{roleData.description}

    div(data-record-detail=roleData)

    if (roleData.createdBy.accountFullName) 
      div
        |Người tạo: #{roleData.createdBy.accountFullName}
        br
        |Thời gian tạo: 
        +formatDate(roleData.createdBy.createdAt)
    if (roleData.updatedBy.length > 0)
      div
        |Người cập nhật cuối: #{roleData.updatedBy.slice(-1)[0].accountFullName}
        br
        |Thời gian cập nhật: 
        +formatDate(roleData.updatedBy.slice(-1)[0].updatedAt)

    table(
      class="table table-hover table-sm"
      table-permissions-detail
    )

      thead
        tr
          th(colspan=2) Tính năng
      tbody     
        //- Danh mục sản phẩm
        tr
          td(colspan="4")
            b Danh mục sản phẩm
        tr(data-name="products-category_view")
          td Xem
          td(class="text-center")
            input(type="checkbox")
        tr(data-name="products-category_create")
          td Thêm mới
          td(class="text-center")
            input(type="checkbox")
        tr(data-name="products-category_edit")
          td Chỉnh sửa
          td(class="text-center")
            input(type="checkbox")
        tr(data-name="products-category_delete")
          td Xóa
          td(class="text-center")
            input(type="checkbox")


        //- Sản phẩm
        tr
          td(colspan="4")
            b Sản phẩm
        tr(data-name="products_view")
          td Xem
          td(class="text-center")
            input(type="checkbox")
        tr(data-name="products_create")
          td Thêm mới
          td(class="text-center")
            input(type="checkbox")
        tr(data-name="products_edit")
          td Chỉnh sửa
          td(class="text-center")
            input(type="checkbox")
        tr(data-name="products_delete")
          td Xóa
          td(class="text-center")
            input(type="checkbox")

        
        //- Nhóm quyền
        tr
          td(colspan="4")
            b Nhóm quyền
        tr(data-name="roles_view")
          td Xem
          td(class="text-center")
            input(type="checkbox")
        tr(data-name="roles_create")
          td Thêm mới
          td(class="text-center")
            input(type="checkbox")
        tr(data-name="roles_edit")
          td Chỉnh sửa
          td(class="text-center")
            input(type="checkbox")
        tr(data-name="roles_delete")
          td Xóa
          td(class="text-center")
            input(type="checkbox")
        tr(data-name="roles_permissions")
          td Phân quyền
          td(class="text-center")
            input(type="checkbox")
        
        //- tai khoan
        tr
          td(colspan="4")
            b Tài khoản
        tr(data-name="accounts_view")
          td Xem
          td(class="text-center")
            input(type="checkbox")
        tr(data-name="accounts_create")
          td Thêm mới
          td(class="text-center")
            input(type="checkbox")
        tr(data-name="accounts_edit")
          td Chỉnh sửa
          td(class="text-center")
            input(type="checkbox")
        tr(data-name="accounts_delete")
          td Xóa
          td(class="text-center")
            input(type="checkbox")

    script(src="/admin/js/role.js") 